<h4 align= "Center" >	
<script>


			var month=new Array("Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec")

			function countup(yr,m,d){
			var present=new Date()
			var presenty=present.getYear()
			if (presenty < 1000)
			presenty+=1900
			var presentm=present.getMonth()
			var presentd=present.getDate()
			var presentstring=month[presentm]+" "+presentd+", "+presenty
			var paststring=month[m-1]+" "+d+", "+yr
			var difference=(Math.round((Date.parse(presentstring)-Date.parse(paststring))/(24*60*60*1000))*1)
			difference+=".67 in change"
			document.write("People have donated $"+difference+" since Spare change got started!")
}
//enter the count up date using the format year/month/day
countup(2001,10,10)
</script>
